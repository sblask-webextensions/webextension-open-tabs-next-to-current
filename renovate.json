{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "automerge": true,
            "automergeType": "branch",
            "groupName": "actions",
            "matchPackageNames": [
                "actions/checkout",
                "actions/setup-python"
            ]
        },
        {
            "automerge": true,
            "automergeType": "branch",
            "extends": [
                "schedule:monthly"
            ],
            "groupName": "eslint",
            "matchPackageNames": [
                "@eslint/js",
                "@stylistic/eslint-plugin",
                "eslint"
            ]
        }
    ],
    "pre-commit": {
        "enabled": true
    }
}
